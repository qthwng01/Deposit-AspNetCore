@model Recharge_Test.Repository.Models.InvoiceDetail
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "InvoiceDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>@Localizer["Invoice detail"]</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Order ID"]
        </dt>
        @if (Model.OrderId == null)
        {
            <dd class="col-sm-10">N/A</dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderId)
            </dd>
        }
        <dt class="col-sm-2">
            @Localizer["Payment"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Customer name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Description"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Status description"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusDescription)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Created date"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Invoice ID"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoices.InvoicesId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="StatisticalInvoices">@Localizer["Back to list"]</a>
</div>
